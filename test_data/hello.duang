// 单行注释将会被忽略
fn 左边(){
    print("中华人民共和国万岁")
}

fn 右边(){
    print("世界人民大团结万岁")
}

fn 测试表达式(){
    let a = 1 + 1
    print(a)
    let b = 4 * 2
    print(b)
    let c = 2.2 + 2.0
    print(c)
    let d = 1 == 1
    print(d)
}

fn 测试变量类型(){
  let d :int = 1 + 1
  print(d)
  let a: float = 1.3 * 2.0
  print(a)
  let b: bool = 1 > 2
  print(b)
}

