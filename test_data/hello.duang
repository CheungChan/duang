fn 测试call(){
    let result = call("cal")
    print("下面是call的结果\n",result)
    print("可以执行任意命令，获取结果\n",call("ls -l /tmp"))
    let me = call("whoami")
    printf("我的名字是\"%s\"\n", me)
    printf("当前登录用户有\n%s\n", call("who"))
}

