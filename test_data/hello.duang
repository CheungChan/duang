// 支持函数声明
fn 天安门(){
    // 支持函数嵌套调用，支持省略函数调用末尾的;
    print("我爱北京天安门")
    左边()
    右边()
}

fn 测试call(){
    let result = call("cal")
    print("下面是call的结果")
    print(result)
    print("可以执行任意命令，获取结果")
    print(call("ls -l"))
}

